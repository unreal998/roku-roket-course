<?xml version="1.0" encoding="utf-8"?>
<component name="DetailsScreen" extends="Group">
    <interface>
        <field id="content" type="node" alwaysnotify="true" onChange="OnContentChange"/>
        <field id="playButtonPressed" type="int" alwaysnotify="true" alias="playButton.buttonSelected"/>
    </interface>
    <script type="text/brightscript" uri="pkg:/components/screens/DetailsScreen.brs"/>
    <children>
    <Poster
        id="thumbnail"
        width="500"
        height="680"
        translation="[150,200]"/>
    <Button
        id="playButton"
        text = "PLAY"
        translation="[800,800]"/>
    <Label 
        id="title"
        font="font:LargeBoldSystemFont"
        color="0xFFFFFF"
        text=""
        horizAlign = "center"
        translation="[800,200]"/>
    <Label
        id="description"
        width="1000"
        font="font:SmallSystemFont"
        color="0xFFFFFF"
        maxLines = "8"
        horizAlign = "left"
        vertAlign = "top"
        text=""
        translation="[800,300]"
        wrap= "true"/>
    <Label
        id = "releaseDate"
        translation="[800,670]"
        text = "Release date:"
        font="font:MediumBoldSystemFont"/>
    <Label
        id = "rating"
        translation="[800,720]"
        text = "Vote Avarage: "
        font="font:MediumBoldSystemFont"/>
    </children>

    
</component>