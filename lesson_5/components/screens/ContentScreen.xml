<?xml version="1.0" encoding="utf-8" ?>
<component   name="ContentScreen"   extends="Group"   initialFocus="contentGrid" >
    <script type="text/brightscript" uri="pkg:/components/screens/ContentScreen.brs" />
    <interface>
        <field id="feedData"
        type="assocarray"
        onChange="onFeedChanged"
        />
        <field id="contentSelected"
        type="assocarray"
        alias="contentGrid.itemSelected"
        />
    </interface>
    <children>
        <Label
        translation="[75, 75]"
        id="header"
        color="0xFFFFFF"
        font="font:LargeBoldSystemFont"
        text=""/>
    <PosterGrid
        id="contentGrid"
        translation="[100,175]"
        basePosterSize="[500,280]"
        itemSpacing="[110,110]"
        caption1NumLines="1"
        caption2NumLines="1"
        numColumns="3"
        numRows="4"
        />
    </children>
</component>
