<?xml version="1.0" encoding="utf-8" ?>
<component name="ContentScreen" extends="Group" initialFocus="contentGrid">
    <script type="text/brightscript" uri="pkg:/components/screens/ContentScreen.brs" />
    <script type="text/brightscript" uri="pkg:/components/configs/Config.brs" />

    <interface>
        <field id="feedData" type="assocarray" onChange="onFeedChanged"/>
        <field id="contentSelected" type= "assocarray" alias="contentGrid.itemSelected"/>
    </interface>
    <children>
        <Poster
            id="logo"
            uri = "pkg:/images/epam.png"
            visible = "true"
            translation="[70, 55]"/>
        <Label 
            translation="[500, 75]" 
            id="header" 
            color="0xFFFFFF" 
            font="font:LargeBoldSystemFont" 
            text=""/>
        <PosterGrid 
            id="contentGrid" 
            translation="[80, 175]" 
            basePosterSize="[200, 300]" 
            itemSpacing="[100, 100]" 
            caption1NumLines="1" 
            caption2NumLines="1" 
            numColumns="6" 
            numRows="9" />
        <RowList 
            id = "rowList"
            translation = "[130,160]"
            itemComponentName = "RowListItem"
            numRows = "2"
            itemSize = "[ 1660, 512 ]"
            rowItemSize = "[ [320, 512] ]"
            itemSpacing = "[120, 80]"
            showRowLabel = "[ true ]"
            drawFocusFeedback = "true" 
            variableWidthItems = "[ true ]"
            vertFocusAnimationStyle = "fixedFocusWrap" 
            rowFocusAnimationStyle = "fixedFocusWrap"/>
        
        <Rectangle id="darker"/>
        <Dialog
            id = "infoDialog"
            visible = "false" />
    </children>
</component>
